<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:scaleType="centerInside" />

    <TextView
        android:id="@+id/infoTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logoImageView"
        android:paddingBottom="24dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="24dp"
        android:text="@string/introduction"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/phoneImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/infoTextView"
        android:layout_marginLeft="28dp"
        android:src="@mipmap/phone" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/openhourTextView"
        android:layout_below="@id/infoTextView"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@id/phoneImageView"
        android:paddingTop="8dp"
        android:text="@string/phone"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/clockImageView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_below="@id/phoneImageView"
        android:layout_marginLeft="28dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:srcCompat="@mipmap/clock"/>

    <TextView
        android:id="@+id/openhourTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/clockImageView"
        android:layout_alignLeft="@id/phone"
        android:layout_alignStart="@id/phone"
        android:layout_alignTop="@id/clockImageView"
        android:paddingTop="8dp"
        android:text="@string/openinghours"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/address_icon"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignLeft="@+id/clockImageView"
        android:layout_below="@id/clockImageView"
        android:layout_alignStart="@+id/clockImageView"
        android:layout_marginBottom="16dp"
        android:src="@mipmap/house"/>

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="0dp"
        android:paddingTop="14dp"
        android:text="@string/location"
        android:textSize="18sp"
        android:layout_below="@+id/openhourTextView"
        android:layout_alignLeft="@+id/openhourTextView"
        android:layout_alignStart="@+id/openhourTextView" />

</RelativeLayout>
    </LinearLayout>
</ScrollView>